%span{:id => response_css_id(response) }
  %span.response= response.text
  %span.tiny-text= link_to_remote 'Edit', :url => { :action => 'edit_response', :id => response.id }
  %span.tiny-text= "|"
  %span.tiny-text= link_to_remote 'Delete', :url => { :action => 'delete_response', :id => response.id}, :confirm => "Are you sure you want to delete this response? It will remove the entire question tree below it."
