- remote_form_for :response, response, :url => { :action => 'update_response', :id => response.id } do |f|
  = f.text_field :text, :size => 80
  = f.hidden_field :tree_id, :value => tree.id
  = submit_tag "Submit"
  %span.tiny-text= link_to_remote "Cancel", :url => { :action => 'show_response', :id => response.id }