- if !@question.nil?
  - form_tag :action => 'next' do
    %span.question= @question.text
    %br
    %br
    - @question.responses.each do |resp|
      = radio_button_tag 'response_id', resp.id, true
      = resp.text
      %br
    %br
    =submit_tag "Next"
- else
  - @results.each do |r|
    %div{:style => 'border: 1px solid black; padding: 10px; width: 500px;'}
      = r.textile
    %br
    =link_to "Start again", :action => 'index'
